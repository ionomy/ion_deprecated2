
## <summary>policy for ion</summary>


########################################
## <summary>
##	Transition to ion.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`ion_domtrans',`
	gen_require(`
		type ion_t, ion_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, ion_exec_t, ion_t)
')


########################################
## <summary>
##	Execute ion server in the ion domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`ion_initrc_domtrans',`
	gen_require(`
		type ion_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, ion_initrc_exec_t)
')


########################################
## <summary>
##	Search ion lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`ion_search_lib',`
	gen_require(`
		type ion_var_lib_t;
	')

	allow $1 ion_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

########################################
## <summary>
##	Read ion lib files.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`ion_read_lib_files',`
	gen_require(`
		type ion_var_lib_t;
	')

	files_search_var_lib($1)
	read_files_pattern($1, ion_var_lib_t, ion_var_lib_t)
')

########################################
## <summary>
##	Manage ion lib files.
