interface(`ion_manage_lib_dirs',`
	gen_require(`
		type ion_var_lib_t;
	')

	files_search_var_lib($1)
	manage_dirs_pattern($1, ion_var_lib_t, ion_var_lib_t)
')


########################################
## <summary>
##	All of the rules required to administrate
##	an ion environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`ion_admin',`
	gen_require(`
		type ion_t;
		type ion_initrc_exec_t;
		type ion_var_lib_t;
	')

	allow $1 ion_t:process { ptrace signal_perms };
	ps_process_pattern($1, ion_t)

	ion_initrc_domtrans($1)
	domain_system_change_exemption($1)
	role_transition $2 ion_initrc_exec_t system_r;
	allow $2 system_r;

	files_search_var_lib($1)
	admin_pattern($1, ion_var_lib_t)

')

